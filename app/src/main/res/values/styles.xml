<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_45</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/text_size_17</item>
        <item name="android:backgroundTint">?colorPrimary</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/layout_margin_10</item>
        <item name="android:layout_marginRight">@dimen/layout_margin_10</item>
        <item name="cardBackgroundColor">?colorPrimary</item>
        <item name="cardCornerRadius">@dimen/corner_radius</item>
        <item name="cardMaxElevation">@dimen/card_max_elevation</item>
    </style>

    <style name="TextViewCityInfoStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/layout_margin_20</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_10</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>

    <style name="ViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3sp</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_10</item>
        <item name="android:layout_marginLeft">@dimen/layout_margin_10</item>
        <item name="android:layout_marginRight">@dimen/layout_margin_10</item>
        <item name="android:background">?pageBackground</item>
    </style>

    <style name="TextViewCountryInfoStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/layout_margin_10</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_10</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyleItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/layout_margin_10</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/layout_margin_10</item>
        <item name="android:layout_marginRight">@dimen/layout_margin_10</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_10</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:inputType">textImeMultiLine</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:hint">@string/hint_for_search_line</item>
        <item name="android:backgroundTint">?colorPrimary</item>
    </style>

    <style name="TextStyleForOption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginStart">@dimen/layout_margin_20</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_20</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin_20</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/text_size_25</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/option_default</item>
    </style>

    <style name="ViewStyleResultFragment">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginStart">@dimen/layout_margin_20</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin_20</item>
        <item name="android:background">@drawable/background_for_text_view</item>
    </style>

    <style name="HeadTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_60</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/text_size_50</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextStyleForOptionLand">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">@dimen/layout_margin_20</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_20</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin_20</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/option_default</item>
    </style>

    <style name="RecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_10</item>
        <item name="android:layout_marginBottom">@dimen/layout_margin_10</item>
    </style>

    <style name="ImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/layout_margin_20</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_20</item>
    </style>

    <style name="TextStyleAboutAppHead">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_20</item>
        <item name="android:layout_marginStart">@dimen/layout_margin_10</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyleAboutAppDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_5</item>
        <item name="android:layout_marginStart">@dimen/layout_margin_10</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/text_size_17</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyleThemesAppHead">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_35</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>